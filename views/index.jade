extends layout

block content
  if authorised
    p Welcome #{fname} | 
      a(href="/exit") Log Out
      p Upload 
      form(method="POST", action="/user")
      input(type="hidden", name="_method", value="PUT")
      p JSON File
        input(type="file", name="name")
      
      p
        input(type="submit")
      if typeof users != 'undefined'
      p User list
      ul
      each user in users
        li= user.user_fname
  else
    p Don't have an account yet? 
      a(href='/register') Register
    p Already have an account? 
      a(href='/login') Login